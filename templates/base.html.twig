<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}ProKiné{% endblock %}</title>

    <!-- MDB CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- FullCalendar CSS -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.css" rel="stylesheet" />


    {% block stylesheets %}
        <!-- Custom styles -->
    {% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">
<!-- Header -->
{% block header %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand mt-2 mt-lg-0" href="#">
                <h5 class="pt-1">ProKiné</h5>
            </a>
            <button class="navbar-toggler" type="button" data-mdb-collapse-init data-mdb-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {% if app.user %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_home') }}">Profile</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_patient') }}">ajouter Patient</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_planning') }}">Planning</a></li>
                    {% else %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Connexion</a></li>
                    {% endif %}
                </ul>
                <div class="d-flex align-items-center justify-content-start">
                    <a class="text-reset me-3" href="#"><i class="fas fa-shopping-cart text-white"></i></a>
                    <!--<div class="dropdown">
                        <a class="text-reset me-3 dropdown-toggle hidden-arrow" href="#" data-mdb-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-bell text-white"></i>
                            <span class="badge rounded-pill badge-notification bg-danger">1</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">Some news</a></li>
                            <li><a class="dropdown-item" href="#">Another news</a></li>
                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                        </ul>
                    </div>-->
                    {% if app.user %}
                    <a href="{{ path('app_logout') }} " class="nav-link">Déconnexion</a>
                    {% endif %}
                    <!--<div class="dropdown">
                        <a class="dropdown-toggle d-flex align-items-center hidden-arrow" href="#" data-mdb-toggle="dropdown" aria-expanded="false">
                            <img src="https://mdbcdn.b-cdn.net/img/new/avatars/2.webp" class="rounded-circle" height="25" alt="Avatar" />
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">My profile</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                        </ul>
                    </div>-->
                </div>
            </div>
        </div>
    </nav>
{% endblock %}

    <!-- Main Content -->
    <main class="flex-grow-1">
        {% block bandeau %}
            <div class="container">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        {% endblock %}
        {% block body %}
            <div class="container mt-4">
                <!-- Your content goes here -->
            </div>
        {% endblock %}
    </main>
<!-- Footer -->
{% block footer %}
    <footer class="bg-primary text-center text-white mt-auto">
        <div class="container p-4">
            <section class="mb-4">
                <a class="btn btn-outline-primary btn-floating m-1 border border-white" href="#" role="button"><i class="fab fa-facebook-f text-white"></i></a>
                <a class="btn btn-outline-primary btn-floating m-1 border border-white" href="#" role="button"><i class="fab fa-twitter text-white"></i></a>
                <a class="btn btn-outline-primary btn-floating m-1 border border-white" href="#" role="button"><i class="fab fa-google text-white"></i></a>
                <a class="btn btn-outline-primary btn-floating m-1 border border-white" href="#" role="button"><i class="fab fa-instagram text-white"></i></a>
                <a class="btn btn-outline-primary btn-floating m-1 border border-white" href="#" role="button"><i class="fab fa-linkedin-in text-white"></i></a>
                <a class="btn btn-outline-primary btn-floating m-1 border border-white" href="#" role="button"><i class="fab fa-github text-white"></i></a>
            </section>
        </div>
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2025 Copyright:
            <a class="text-white" href="https://mdbootstrap.com/">ProKiné</a>
        </div>
    </footer>
{% endblock %}


{% block javascripts %}
    <!-- Custom scripts -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js" integrity="sha256-ZztCtsADLKbUFK/X6nOYnJr0eelmV2X3dhLDB/JK6fM=" crossorigin="anonymous"></script>
    <!-- FullCalendar JS -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.js"></script>
    <!-- MDB JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>
